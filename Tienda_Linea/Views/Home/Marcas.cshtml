@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                Lista Marcas
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <div class="col">
                                <a class="btn btn-success" href="@Url.Action("Registrarmarca", "Home")">Crear Marca</a>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        @if (ViewBag.Marcas != null)
                        {
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Descripción</th>
                                        <th>Activo</th>
                                    </tr>
                                </thead>

                                @foreach (Tienda_Linea.Models.Marca marca in ViewBag.Marcas)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => marca.IdMarca)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => marca.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => marca.Estado, new { @readonly = "readonly" })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Actualizar ", "Actualizarmarca", "Home", new { idMarca = marca.IdMarca }, new { @class = "btn btn-success" })
                                        </td>
                                    </tr>
                                }
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>