@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                Lista Categorias
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <div class="col">
                                <a class="btn btn-success" href="@Url.Action("Registrarcategoria", "Home")">Crear Categoria</a>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        @if (ViewBag.Categorias != null)
                        {
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Descripción</th>
                                        <th>Activo</th>
                                    </tr>
                                </thead>
                                @foreach (Tienda_Linea.Models.Categoria categoria in ViewBag.Categorias)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => categoria.IdCategoria)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => categoria.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => categoria.Estado, new { @readonly = "readonly" })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Actualizar ", "Actualizarcategoria", "Home", new { idCategoria = categoria.IdCategoria }, new { @class = "btn btn-success" })
                                        </td>
                                    </tr>
                                }

                            </table>
                        }
                        @if (ViewBag.Categorias == null)
                        {
                            <p>No hay categorias aun</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>