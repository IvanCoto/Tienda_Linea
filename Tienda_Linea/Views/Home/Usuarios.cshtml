@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                Lista Usuarios
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <div class="col">
                                <a class="btn btn-success" href="@Url.Action("Registrarusuario", "Home")">Crear Usuario</a>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        @if (ViewBag.Usuarios != null)
                        {
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Tipo Usuario</th>
                                        <th>Nombre</th>
                                        <th>Identificacion</th>
                                        <th>Correo</th>
                                        <th>Telefono</th>
                                        <th>Activo</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>

                                @foreach (Tienda_Linea.Models.Usuario usuario in ViewBag.Usuarios)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => usuario.IdUsuario)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => usuario.TipoUsuario.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => usuario.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => usuario.Identificacion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => usuario.Correo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => usuario.Telefono[0].Numero)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => usuario.Activo, new { @readonly = "readonly" })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Actualizar ", "Actualizarusuario", "Home", new { idUsuario = usuario.IdUsuario }, new { @class = "btn btn-success" })
                                        </td>
                                    </tr>
                                }

                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>