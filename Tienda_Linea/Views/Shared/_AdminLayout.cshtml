<!DOCTYPE html>
<html dir="ltr" lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Bike Store</title>
    <meta name="keywords" content="Latest Blog" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" media="screen" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu:300,400,500,700&display=swap" rel="stylesheet">
    <link href="~/css/stylesheet.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,800&display=swap"
          rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet" />
    <link href="~/css/owl.carousel.css" rel="stylesheet">
    <link href="~/css/responsive.css" rel="stylesheet" />
    <link href="~/css/style.css" type="text/css" rel="stylesheet" media="screen" />
    <link href="~/css/swiper.min.css" type="text/css" rel="stylesheet" media="screen" />
    <link href="~/css/opencart.css" type="text/css" rel="stylesheet" media="screen" />
    <link href="~/css/magnific-popup.css" type="text/css" rel="stylesheet" media="screen" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
    <input type="hidden" value="@Session["IdUsuario"]" id="IdUsuario" />
    <input type="hidden" value="@Session["CodigoSeguridad"]" id="CodigoSeguridad" />

    <!-- loader -->
    <div class="loader" id="window">
        <img src="image/preloader.gif" id="hourglass2" alt="hourglass" title="hourglass">
    </div>
    <!-- loader end -->
    <!-- header section -->
    <header class="main-menu">
        <div class="header_wrapper_home">
            <div class="container-fluid">
                <!-- destop vergian -->
                <div class="row header_sec destop_header">
                    <div class="col-sm-4 rtl_logo">
                        <div id="logo">
                            <a href="@Url.Action("Productos", "Home")">
                                <img src="~/image/logo1.png" title="Your Store" alt="Your Store" class="img-responsive" />
                            </a>
                        </div>
                    </div>
                    <!-- my account -->
                    <div class="col-sm-8">
                        <div class="text_account_wrapper pull-right d-flex">
                            @if (Session["NombreUsuario"] != null)
                            {
                                <div class="header_transaction">
                                    <p class="fs-4">@Session["NombreUsuario"]</p>
                                </div>
                            }
                            @if (Session["NombreUsuario"] != null)
                            {
                                <div>
                                    <a href="@Url.Action("CerrarSesion", "Auth")" class="btn btn-danger ms-4">
                                        Cerrar Sesión
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- header section end-->
    <div class="header_menu">
        <div class="container-fluid">
            <div class="row">
                <nav class="navbar navbar-expand-lg bg-light">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav row w-100 d-flex justify-content-center">
                                <li class="nav-item col-2">
                                    @Html.ActionLink("Productos", "Productos", "Home", new { @class = "nav-link fs-3" })
                                </li>
                                <li class="nav-item col-2">
                                    @Html.ActionLink("Roles", "Roles", "Home", new { @class = "nav-link fs-3" })
                                </li>
                                <li class="nav-item col-2">
                                    @Html.ActionLink("Categorías", "Categorias", "Home", new { @class = "nav-link fs-3" })
                                </li>
                                <li class="nav-item col-2">
                                    @Html.ActionLink("Marcas", "Marcas", "Home", new { @class = "nav-link fs-3" })
                                </li>
                                <li class="nav-item col-2">
                                    @Html.ActionLink("Usuarios", "Usuarios", "Home", new { @class = "nav-link fs-3" })
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>

    @RenderBody()

    <script src="~/js/jquery-2.1.1.min.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/js/wow.min.js" type="text/javascript"></script>
    <script src="~/js/swiper.jquery.js" type="text/javascript"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/common.js" type="text/javascript"></script>
    <script src="~/js/jquery.zoom.js"></script>
    <script src="~/js/thestore.js"></script>
    <script src="~/js/loader.js"></script>
    <script src="~/js/search.js"></script>
    <script src="~/js/scrol.js"></script>
    <script src="~/js/carousel.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js" type="text/javascript"></script>
</body>

</html>