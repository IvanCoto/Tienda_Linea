@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h2 class="mb-5"> Tienda de Bicicletas </h2>
<div class="container" id="container">
    <div class="form-container sign-in-container">
        @using (Html.BeginForm("Ingresar", "Auth", FormMethod.Post, new { id = "frmLogin" }))
        {
            <h1>Ingresar</h1>

            <span class="identificacion w-100">
                <input type="text" class="form-control" placeholder="Identificacion" name="identificacion" id="identificacion" required />
                <label class="input_error text-danger mb-3"></label>
            </span>

            <input type="password" class="form-control" placeholder="Password" name="passw" id="passw" required />
            <a href="#" class="text-info">¿Olvidaste tu contraseña?</a>
            <button type="submit">Ingresar</button>
        }
    </div>
        <div class="form-container sign-up-container">
            @using (Html.BeginForm("Registrar", "Auth", FormMethod.Post, new { id = "frmRegister" }))
            {
                <h1>Crear una cuenta</h1>
                <span class="rName w-100">
                    <input type="text" class="form-control" placeholder="Nombre" name="nombre" id="rName" required />
                    <label class="input_error text-danger mb-3"></label>
                </span>

                <span class="rIdentificacion w-100">
                    <input type="text" class="form-control" placeholder="Identificacion" name="identificacion" id="rIdentificacion" required />
                    <label class="input_error text-danger mb-3"></label>
                </span>

                <span class="rPassw w-100">
                    <input type="password" class="form-control" placeholder="Contraseña" name="passw" id="rPassw" required />
                    <label class="input_error text-danger mb-3"></label>
                </span>

                <span class="rPassw2 w-100">
                    <input type="password" class="form-control" placeholder="Confirmar Contraseña" name="passw2" id="rPassw2" required />
                    <label class="input_error text-danger mb-3"></label>
                </span>
                <button>Crear</button>
            }
        </div>
            <div class="overlay-container">
                <div class="overlay">
                    <div class="overlay-panel overlay-left">
                        <h1>¡Hola, de nuevo!</h1>
                        <p>¿Si tienes una cuenta?</p>
                        <button class="ghost" id="signIn">Ingresar</button>
                    </div>
                    <div class="overlay-panel overlay-right">
                        <h1>¡Bienvenido!</h1>
                        <p>¿Aun no tienes una cuenta?</p>
                        <button class="ghost" id="signUp">Registrarse</button>
                    </div>
                </div>
            </div>
        </div>
<!--El jquery se envia aqui porque en este punto ya la pagina cargo jquery-->
<script src="~/js/Validaciones.js"></script>